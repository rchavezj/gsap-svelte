{
  "name": "@gsap/svelte",
  "version": "1.0.0",
  "description": "Unofficial Svelte integration for GSAP animations with automatic cleanup and TypeScript support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./components/*": "./dist/components/*"
  },
  "files": [
    "dist",
    "src/components",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/actions.ts --format esm --dts --clean && cp -r src/components dist/",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "gsap",
    "svelte",
    "svelte5",
    "sveltekit",
    "animation",
    "greensock",
    "actions",
    "typescript"
  ],
  "author": "Roberto Chavez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gsap-svelte"
  },
  "bugs": {
    "url": "https://github.com/yourusername/gsap-svelte/issues"
  },
  "homepage": "https://github.com/yourusername/gsap-svelte#readme",
  "peerDependencies": {
    "gsap": "^3.12.0",
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "gsap": "^3.12.5",
    "svelte": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
